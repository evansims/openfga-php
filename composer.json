{
  "name": "evansims/openfga-php",
  "description": "PHP SDK for OpenFGA.",
  "license": "Apache-2.0",
  "type": "library",
  "keywords": [
    "openfga",
    "authorization"
  ],
  "authors": [
    {
      "name": "Evan Sims",
      "email": "hello@evansims.com",
      "homepage": "https://evansims.com/"
    }
  ],
  "homepage": "https://github.com/evanisms/openfga-php",
  "require": {
    "php": "^8.3",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "psr-discovery/all": "^1",
    "psr/http-client-implementation": "^1",
    "psr/http-factory-implementation": "^1",
    "psr/http-message-implementation": "^1"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2",
    "friendsofphp/php-cs-fixer": "^3",
    "kriswallsmith/buzz": "^1.3",
    "maglnet/composer-require-checker": "^4",
    "mockery/mockery": "^1",
    "nyholm/psr7": "^1.8",
    "pestphp/pest": "^3",
    "phpro/grumphp": "^2",
    "phpstan/phpstan": "^2",
    "phpstan/phpstan-strict-rules": "^2",
    "psr-mock/http-client-implementation": "^1",
    "psr-mock/http-factory-implementation": "^1",
    "psr-mock/http-message-implementation": "^1",
    "rector/rector": "^2",
    "symfony/cache": "^4 || ^5 || ^6 || ^7",
    "symfony/event-dispatcher": "^4 || ^5 || ^6 || ^7",
    "vimeo/psalm": "^6",
    "wikimedia/composer-merge-plugin": "^2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "OpenFGA\\": "src/"
    },
    "files": [
      "src/Models/Helpers.php",
      "src/Results/Helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "OpenFGA\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true,
      "php-http/discovery": false,
      "phpro/grumphp": true,
      "wikimedia/composer-merge-plugin": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "8.3.16"
    },
    "platform-check": false,
    "preferred-install": "dist",
    "process-timeout": 0,
    "sort-packages": true
  },
  "extra": {
    "merge-plugin": {
      "ignore-duplicates": false,
      "include": [
        "composer.local.json"
      ],
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": true,
      "recurse": true,
      "replace": true
    }
  },
  "scripts": {
    "docs": "@php tools/docs/generate.php",
    "wiki": "./tools/sync-wiki.sh",
    "lint": [
      "@phpstan",
      "@psalm",
      "@rector",
      "@phpcs"
    ],
    "pest:contract": [
      "@php vendor/bin/pest --colors=always --testsuite contract --strict-global-state --fail-on-risky --fail-on-warning"
    ],
    "pest:integration": [
      "@pest:integration:build",
      "docker compose -f docker-compose.integration.yml run --rm test"
    ],
    "pest:integration:build": [
      "docker compose -f docker-compose.integration.yml build test"
    ],
    "pest:integration:build-force": [
      "docker compose -f docker-compose.integration.yml build test --no-cache --progress=plain"
    ],
    "pest:integration:run": [
      "@putenv XDEBUG_MODE=coverage",
      "@php vendor/bin/pest --testsuite integration"
    ],
    "pest:tools": [
      "@putenv XDEBUG_MODE=coverage",
      "@php vendor/bin/pest --colors=always --testsuite tools --strict-global-state --fail-on-risky --fail-on-warning --coverage --strict-coverage --compact"
    ],
    "pest:unit": [
      "@putenv XDEBUG_MODE=coverage",
      "@php vendor/bin/pest --colors=always --testsuite unit --strict-global-state --fail-on-risky --fail-on-warning --coverage --strict-coverage --compact"
    ],
    "pest:debug": [
      "@putenv XDEBUG_MODE=coverage",
      "@php vendor/bin/pest --colors=always --testsuite unit --strict-global-state --fail-on-risky --fail-on-warning --coverage --strict-coverage --debug"
    ],
    "phpcs": [
      "@putenv PHP_CS_FIXER_IGNORE_ENV=1",
      "@php vendor/bin/php-cs-fixer fix --dry-run --diff"
    ],
    "phpcs:fix": [
      "@putenv PHP_CS_FIXER_IGNORE_ENV=1",
      "@php vendor/bin/php-cs-fixer fix"
    ],
    "phpstan": "@php vendor/bin/phpstan analyze",
    "psalm": "@php vendor/bin/psalm",
    "rector": "@php vendor/bin/rector process src --dry-run",
    "rector:fix": "@php vendor/bin/rector process src",
    "test": [
      "@lint",
      "@pest:unit"
    ],
    "test:contract": [
      "@pest:contract"
    ],
    "test:integration": [
      "@pest:integration"
    ],
    "test:unit": [
      "@pest:unit"
    ]
  }
}
