{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "* * * * 0,6"
  ],
  "packageRules": [
    {
      "description": "Group Docker Dependencies",
      "groupName": "Docker Dependencies",
      "matchManagers": [
        "dockerfile"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Group Composer Dependencies",
      "groupName": "Composer Dependencies",
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Group GitHub Actions",
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Group Breaking Change Suggestions",
      "groupName": "Breaking Changes",
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true
}
